<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ResultActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_gallery2"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginStart="68dp"
        android:backgroundTint="@color/btnColor"

        android:elevation="5dp"
        app:icon="@drawable/ic_photo_library_black_24dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="50dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_takepicture"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.854"
        app:rippleColor="@color/btnClick"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent">
<!--        app:strokeColor="@color/black"-->
<!--        app:strokeWidth="3dp">-->

    </com.google.android.material.button.MaterialButton>

    <ImageView
        android:id="@+id/iv_input"
        android:layout_width="0dp"
        android:layout_height="342dp"
        android:layout_marginBottom="236dp"
        android:clickable="true"
        android:src="@drawable/ic_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/original" />

    <ImageView
        android:id="@+id/iv_output"
        android:layout_width="0dp"
        android:layout_height="342dp"

        android:layout_marginBottom="236dp"
        android:clickable="true"
        android:src="@drawable/ic_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/original"
        tools:visibility="invisible" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_convert"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/btnColor"
        android:elevation="5dp"

        app:icon="@drawable/ic_change_circle_black_24dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="50dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.854"
        app:rippleColor="@color/btnClick"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent">
<!--        app:strokeColor="@color/black"-->
<!--        app:strokeWidth="3dp">-->

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/btnColor"
        android:elevation="5dp"

        app:icon="@drawable/ic_save_alt_black_24dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="50dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.854"
        app:rippleColor="@color/btnClick"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent">
<!--        app:strokeColor="@color/black"-->
<!--        app:strokeWidth="3dp">-->

    </com.google.android.material.button.MaterialButton>


</androidx.constraintlayout.widget.ConstraintLayout>